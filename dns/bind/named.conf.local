{% for zonename in salt['pillar.get']('dns:bind:zones') %}
zone "{{ zonename }}" {
    type slave;
    file "/etc/bind/slave/{{ zonename }}";
    masters { {{ salt['pillar.get']('dns:bind:master') }}; };
    notify no;
};
{% endfor %}

